# ============================================
# DELIVERY SERVICE ENVIRONMENT VARIABLES
# ============================================

# Application Configuration
NODE_ENV=development
PORT=3004
HOST=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=delivery_db
DB_USER=postgres
DB_PASSWORD=postgres_password
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# JWT Configuration
JWT_SECRET=shared-jwt-secret-key-12345

# Service URLs for Integration
AUTH_SERVICE_URL=http://localhost:3001
ORDER_SERVICE_URL=http://localhost:3002
PARTNER_SERVICE_URL=http://localhost:3005
PAYMENT_SERVICE_URL=http://localhost:3003

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# File Upload Configuration
JSON_LIMIT=10mb
URL_ENCODED_LIMIT=10mb

# WebSocket Configuration
FRONTEND_URL=http://localhost:3000

# Redis Configuration (optional, for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# AWS Configuration (for file storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=delivery-service-uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@deliveryservice.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Push Notification Configuration
FCM_SERVER_KEY=
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_BUNDLE_ID=com.deliveryservice.app

# Google Maps API (for route optimization)
GOOGLE_MAPS_API_KEY=

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/delivery-service.log

# Monitoring Configuration
PROMETHEUS_PORT=9464
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Feature Flags
ENABLE_REAL_TIME_TRACKING=true
ENABLE_ROUTE_OPTIMIZATION=true
ENABLE_AUTOMATED_ASSIGNMENT=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true

# Business Logic Configuration
DEFAULT_DELIVERY_FEE=2.50
DISTANCE_FEE_PER_KM=0.80
WEIGHT_FEE_PER_KG=0.50
ITEM_FEE_PER_EXTRA=0.25
HIGH_PRIORITY_MULTIPLIER=1.2
URGENT_PRIORITY_MULTIPLIER=1.5
PEAK_HOUR_SURGE_MULTIPLIER=1.25
MAX_DRIVER_DISTANCE_KM=10
MAX_ASSIGNMENT_TIME_MINUTES=15
DEFAULT_COMMISSION_RATE=0.15

# Operational Hours
OPERATING_START_HOUR=6
OPERATING_END_HOUR=23
PEAK_HOURS_START_1=11
PEAK_HOURS_END_1=14
PEAK_HOURS_START_2=18
PEAK_HOURS_END_2=21