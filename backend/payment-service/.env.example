# Database Configuration
DB_HOST=postgres
DB_USER=postgres
DB_PASSWORD=uth
DB_NAME=fitfood_db
DB_PORT=5432
DATABASE_URL=postgresql://postgres:uth@postgres:5432/fitfood_db

# JWT Configuration
JWT_SECRET=shared-jwt-secret-key-12345

# PayOS Payment Gateway (Add your credentials)
PAYOS_CLIENT_ID=your_client_id_here
PAYOS_API_KEY=your_api_key_here
PAYOS_CHECKSUM_KEY=your_checksum_key_here
PAYOS_ENVIRONMENT=sandbox

# Server Configuration
PORT=3008
NODE_ENV=development

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Payment Service Configuration
PAYMENT_SERVICE_URL=http://payment-service:3008

# Subscription Check Configuration
# Set to 'true' to allow access when payment service is unavailable
SUBSCRIPTION_CHECK_FAIL_OPEN=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000