{
  "dashboard": {
    "id": null,
    "title": "Catalog Service Monitoring",
    "tags": ["catalog", "microservice", "fitfood"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Request Rate",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(catalog_http_requests_total[5m])",
            "legendFormat": "{{method}} {{route}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 2,
        "title": "HTTP Request Duration",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(catalog_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.5},
                {"color": "red", "value": 1.0}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Catalog Operations",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(catalog_operations_total{status=\"success\"}[5m])",
            "legendFormat": "{{operation}} (success)"
          },
          {
            "expr": "rate(catalog_operations_total{status=\"error\"}[5m])",
            "legendFormat": "{{operation}} (error)"
          }
        ],
        "yAxes": [
          {"label": "Operations/sec", "min": 0}
        ],
        "legend": {"show": true},
        "fill": 1,
        "linewidth": 2
      },
      {
        "id": 4,
        "title": "Inventory Levels",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "catalog_inventory_levels",
            "legendFormat": "{{product_name}}"
          }
        ],
        "yAxes": [
          {"label": "Quantity", "min": 0}
        ],
        "legend": {"show": true},
        "fill": 0,
        "linewidth": 2,
        "pointradius": 2
      },
      {
        "id": 5,
        "title": "Low Stock Alerts",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "increase(catalog_low_stock_alerts_total[1h])",
            "legendFormat": "Alerts last hour"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "HTTP Error Rate",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "rate(catalog_http_requests_total{status_code=~\"4..|5..\"}[5m]) / rate(catalog_http_requests_total[5m]) * 100",
            "legendFormat": "Error Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100,
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Request Heatmap by Status Code",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "increase(catalog_http_requests_total[1m])",
            "legendFormat": "{{status_code}}"
          }
        ],
        "heatmap": {
          "hideZeroBuckets": true,
          "highlightCards": true,
          "cardColor": {"mode": "spectrum"},
          "cardPadding": 2,
          "cardRound": 2
        },
        "color": {
          "mode": "spectrum",
          "cardColor": "#b4ff00",
          "colorScale": "sqrt",
          "exponent": 0.5,
          "colorScheme": "interpolateSpectral"
        }
      },
      {
        "id": 8,
        "title": "Database Connection Pool",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 40},
        "targets": [
          {
            "expr": "pg_pool_size",
            "legendFormat": "Pool Size"
          },
          {
            "expr": "pg_pool_idle",
            "legendFormat": "Idle Connections"
          },
          {
            "expr": "pg_pool_waiting",
            "legendFormat": "Waiting Clients"
          }
        ],
        "yAxes": [
          {"label": "Connections", "min": 0}
        ],
        "legend": {"show": true}
      },
      {
        "id": 9,
        "title": "RabbitMQ Messages",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 40},
        "targets": [
          {
            "expr": "rabbitmq_published_total",
            "legendFormat": "Messages Published"
          },
          {
            "expr": "rabbitmq_consumed_total",
            "legendFormat": "Messages Consumed"
          }
        ],
        "yAxes": [
          {"label": "Messages", "min": 0}
        ],
        "legend": {"show": true}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s",
    "schemaVersion": 27,
    "version": 1
  }
}